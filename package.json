{
    "name": "cnc-dro",
    "version": "1.0.0",
    "description": "An Electron application with React",
    "main": "./out/main/index.js",
    "author": "example.com",
    "homepage": "https://electron-vite.org",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint --cache .",
        "start": "electron-vite preview --skip-build",
        "preview": "electron-vite preview",
        "dev": "electron-vite --watch dev",
        "build": "electron-vite build",
        "rebuild": "git pull origin master && npm run build",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "npm run build && electron-builder --mac",
        "build:linux": "npm run build && DEVICE=pi COMMS=serial FULLSCREEN=1 electron-builder --linux --arm64"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/utils": "^4.0.0",
        "@ramonak/react-progress-bar": "^5.4.0",
        "@serialport/parser-readline": "^13.0.0",
        "axios": "^1.8.4",
        "colornames": "^1.1.1",
        "gcode-preview": "^2.18.0",
        "node-hid": "^2.1.1",
        "react-terminal": "^1.4.5",
        "react-toastify": "^11.0.5",
        "react-use-websocket": "^4.13.0",
        "serialport": "^13.0.0",
        "three": "^0.175.0"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "^2.0.0",
        "@electron-toolkit/eslint-config-prettier": "^3.0.0",
        "@types/node-hid": "^3.0.0",
        "@types/react": "^19.1.2",
        "@types/three": "^0.175.0",
        "@vitejs/plugin-react": "^4.3.4",
        "dotenv": "^16.5.0",
        "electron": "^35.1.5",
        "electron-builder": "^25.1.8",
        "electron-vite": "^3.1.0",
        "eslint": "^9.24.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "vite": "^6.2.6"
    }
}